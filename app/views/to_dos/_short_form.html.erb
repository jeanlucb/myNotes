<%= form_for @to_do, remote: true do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :deadline %>
    <%= f.datetime_select :deadline, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Create", class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
