<% title "To-Do's" %>

<div class="container-fluid">

	<div class="row">
		<div class="col-sm-6">
			<h1><%= yield :title %></h1>
		</div>
		<div class="col-sm-6 text-right" style="padding-top: 18px">

			<%= form_tag('/to_dos', method: :get, class: "form-inline") do  %>
				<div class="form-group">
			    <%= text_field_tag :q, params[:q], class: "form-control"  %>
				</div>
				<%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
			<% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-8">
		<%= paginate @to_dos, :theme => 'twitter-bootstrap-3',
		    :pagination_class => "pagination pagination-sm" %>
		</div>
	</div> 
	<div class="row">
		<div class="col-sm-8">
		<div>
			<%= link_to "Add a new task", new_to_do_path, id: "new_link", remote: true %><br><br>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12" id="tasks_list">
			<% @to_dos.each do |to_do| %>
				<%= render to_do %>	
			<% end %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12">
		<%= paginate @to_dos, :theme => 'twitter-bootstrap-3',
		    :pagination_class => "pagination pagination-sm" %>
		</div>
	</div>

</div>

