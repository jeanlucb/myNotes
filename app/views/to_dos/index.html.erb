
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-6">
			<h1>To-Do's</h1>
		</div>
		<div class="col-sm-6 text-right" style="padding-top: 18px">

			<%= form_tag('/to_dos', method: :get, class: "form-inline") do  %>
				<div class="form-group">
			    <%= text_field_tag :q, params[:q], class: "form-control"  %>
				</div>
				<%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
			<% end %>

			
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
		<%= paginate @to_dos, :theme => 'twitter-bootstrap-3',
		    :pagination_class => "pagination pagination-sm" %>
		</div>
		
		<div class="col-sm-6 text-justify" >
			<%= render 'tag/cloud', tags: @tags %>
		</div>
	</div>
</div>


<div class="container">

	<% @to_dos.each do |to_do| %>
		<%= render 'to_do_summary', to_do: to_do %>
	<% end %>


</div>

<br>

<%= link_to 'New To Do', new_to_do_path %>
