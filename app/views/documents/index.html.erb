<% title "Documents" %>

<div class="container-fluid">
	<div class="row">
		<div class="col-sm-6">
			<h1><%= yield :title %></h1>
		</div>
		<div class="col-sm-6 text-right" style="padding-top: 18px">

			<%= form_tag('/documents', method: :get, class: "form-inline") do  %>
				<div class="form-group">
			    <%= text_field_tag :q, params[:q], class: "form-control"  %>
				</div>
				<%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
			<% end %>

			
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
		<%= paginate @documents, :theme => 'twitter-bootstrap-3',
		    :pagination_class => "pagination pagination-sm" %>
		</div>
		
		<div class="col-sm-6 text-justify" >
			<%= render 'tag/cloud', tags: @tags %>
		</div>
	</div>
</div>


<div class="container-fluid">
  <% @documents.each do |document| %>
      <%= render 'document_summary', document: document %>
  <% end %>
</div>

<%= paginate @documents, :theme => 'twitter-bootstrap-3',
:pagination_class => "pagination pagination-sm" %>


<br>

<%= link_to 'New Document', new_document_path %>

