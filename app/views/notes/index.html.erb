

<div class="container-fluid">
	<div class="row">
		<div class="col-sm-6">
			<h1>Notes</h1>
		</div>
		<div class="col-sm-6 text-right" style="padding-top: 18px">

			<%= form_tag('/notes', method: :get, class: "form-inline") do  %>
				<div class="form-group">
			    <%= text_field_tag :q, params[:q], class: "form-control"  %>
				</div>
				<%= submit_tag "Search", class: "btn btn-primary btn-sm" %>
			<% end %>

			
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">
		<%= paginate @notes, :theme => 'twitter-bootstrap-3',
		    :pagination_class => "pagination pagination-sm" %>
		</div>
		
		<div class="col-sm-6 text-justify" >
			<%= render 'tag/cloud', tags: @notes.tag_counts %>
		</div>
	</div>
</div>

<div class="container-fluid">
	<% @notes.each do |note| %>
	    <%= render 'note_summary', note: note %>
	<% end %>
</div>

<%= paginate @notes, :theme => 'twitter-bootstrap-3',
:pagination_class => "pagination pagination-sm" %>


<br>

<%= link_to 'New Note', new_note_path %>
